@using System.Globalization
@model  List<RunApi.Models.Cliente.V_VentasPagosInternos>   @* Ajusta el namespace si aplica *@
@{
    ViewBag.Title = "Medios de Pago";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml"; // usa tu layout base
    var esAdmin = (ViewBag.EsAdmin as bool?) ?? false;
    var esCO = new CultureInfo("es-CO");
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0">Medios de Pago</h4>
        <a href="@Url.Action("Index", "HistorialVentas")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Historial
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm align-middle mb-0" id="tablaMediosPago">
                    <thead class="table-light">
                        <tr>
                            <th>Medio de Pago</th>
                            <th>Medio Pago Interno</th>
                            <th class="text-end">Valor</th>
                            @if (esAdmin)
                            {
                                <th class="text-end" style="width:220px;">Acciones</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var p in Model)
                            {
                                <tr>
                                    <td>@(p.medioDePago ?? "-")</td>
                                    <td>@(p.medioPagoInterno ?? "-")</td>

                                    @if (esAdmin)
                                    {
                                        <td class="text-end">
                                            @using (Html.BeginForm("EditarMedioPago", "HistorialVentas", FormMethod.Post, new { @class = "d-inline-flex gap-2 align-items-center justify-content-end w-100" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("id", p.id)

                                                <input type="number"
                                                       name="valorPago"
                                                       class="form-control form-control-sm text-end"
                                                       step="0.01"
                                                       value="@p.valorPago"
                                                       style="max-width: 150px;" />

                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-save2"></i> Guardar
                                                </button>
                                            }
                                        </td>
                                        <td class="text-end">
                                            @using (Html.BeginForm("EliminarMedioPago", "HistorialVentas", FormMethod.Post, new { @class = "d-inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("id", p.id)
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                        onclick="return confirm('¿Eliminar este medio de pago?');">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                            }
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-end">@p.valorPago.ToString("C0", esCO)</td>
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="@(esAdmin ? 4 : 3)" class="text-center text-muted py-4">
                                    No hay medios de pago para mostrar.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

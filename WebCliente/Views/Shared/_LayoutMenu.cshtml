<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SERINSIS PC S.A.S.</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/Archivos/IMG/Logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/menu.css" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="menu-toggle d-md-none" id="toggleSidebar">
                <i class="bi bi-list"></i>
            </button>

            <span class="navbar-text text-white" id="nombreEmpresa">@Session["razonSocial"] - Versión: 2.0</span>




            <div class="d-flex align-items-center ms-auto">
                <!-- Notificaciones con dropdown -->
                <div class="dropdown me-3">
                    <button class="btn btn-dark position-relative dropdown-toggle" type="button" id="notificacionesDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3 <!-- Número de notificaciones -->
                            <span class="visually-hidden">notificaciones no leídas</span>
                        </span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificacionesDropdown" style="width: 300px;">
                        <li><h6 class="dropdown-header">Notificaciones</h6></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">🔔 Nueva factura generada</a></li>
                        <li><a class="dropdown-item" href="#">📦 Producto agotado</a></li>
                        <li><a class="dropdown-item" href="#">💳 Pago recibido</a></li>
                    </ul>
                </div>

                <!-- Botón de salir -->
                <form action="@Url.Action("CerrarSesion","Menu")" method="get" class="mb-0">
                    <button type="submit" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Salir
                    </button>
                </form>
            </div>
        </div>
    </nav>


    <div class="content-wrapper">
        <div id="sidebar" class="sidebar-expanded">

            <br />
            <br />

            <div class="text-center p-3">
                <img src="~/Archivos/IMG/Logo.png" alt="Tatacoa" class="img-fluid" style="max-height: 80px;">
            </div>
            <ul class="nav flex-column">
                <li class="nav-item px-3" id="manualToggle">
                    <a class="nav-link text-white" href="#">
                        <i class="bi bi-arrow-bar-left"></i><span> Contraer</span>
                    </a>
                </li>
                @* menú configuración *@
                <li class="nav-item px-3">
                    <a class="nav-link text-white d-flex align-items-center justify-content-between" data-bs-toggle="collapse"
                       href="#submenuConfiguracion" role="button" aria-expanded="false" aria-controls="submenuConfiguracion">
                        <div><i class="bi bi-gear"></i><span> Configuración</span></div>
                        <i class="bi bi-chevron-down"></i>
                    </a>
                    <div class="collapse submenu-container" id="submenuConfiguracion">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-person-circle me-2"></i>Usuarios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-sliders me-2"></i>Parámetros
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-person-badge me-2"></i>Vendedores
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-emoji-smile me-2"></i>Meseros
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-grid-3x3-gap-fill me-2"></i>Mesas
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                @* menú inventario *@
                <li class="nav-item px-3">
                    <a class="nav-link text-white d-flex align-items-center justify-content-between" data-bs-toggle="collapse"
                       href="#submenuInventario" role="button" aria-expanded="false" aria-controls="submenuInventario">
                        <div><i class="bi bi-box-seam"></i><span> Inventario</span></div>
                        <i class="bi bi-chevron-down"></i>
                    </a>
                    <div class="collapse submenu-container" id="submenuInventario">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#"><i class="bi bi-box me-2"></i>Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-tags me-2"></i>Categorías
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-truck me-2"></i>Proveedores
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-cart-plus me-2"></i>Compras
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-clock-history me-2"></i>Historial Compras
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#"><i class="bi bi-recycle me-2"></i>Merma</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-exclamation-triangle me-2"></i>Agotados
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-clipboard-data me-2"></i>Kardex
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                @* menú ventas *@
                <li class="nav-item px-3">
                    <a class="nav-link text-white d-flex align-items-center justify-content-between" data-bs-toggle="collapse"
                       href="#submenuVentas" role="button" aria-expanded="false" aria-controls="submenuVentas">
                        <div><i class="bi bi-cart-check"></i><span> Ventas</span></div>
                        <i class="bi bi-chevron-down"></i>
                    </a>
                    <div class="collapse submenu-container" id="submenuVentas">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="@Url.Action("Index","Caja")" target="_blank">
                                <i class="bi bi-shop me-2"></i>Caja POS</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="@Url.Action("Index","HistorialVentas")">
                                    <i class="bi bi-clock-history me-2"></i>Historial Ventas    
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-bag-check me-2"></i>Pedidos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-people me-2"></i>Clientes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-file-earmark-text me-2"></i>Cotizaciones
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-clock me-2"></i>H.
                                    Cotizaciones
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>


                <!-- Menú Contabilidad -->
                <li class="nav-item px-3">
                    <a class="nav-link text-white d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                       href="#submenuContabilidad" role="button" aria-expanded="false" aria-controls="submenuContabilidad">
                        <i class="bi bi-calculator"></i>
                        <span> <span>Contabilidad</span></span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse submenu-container" id="submenuContabilidad">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("Index","Informes")">
                                    <i class="bi bi-bar-chart-line"></i><span>
                                        Informes
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">
                                    <i class="bi bi-cash-coin"></i><span>
                                        Apertura de caja
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">
                                    <i class="bi bi-box-arrow-left"></i><span>
                                        Cerrar caja
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">
                                    <i class="bi bi-wallet2"></i><span>
                                        Gastos
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">
                                    <i class="bi bi-arrow-down-circle"></i><span>
                                        Cuentas por pagar
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">
                                    <i class="bi bi-arrow-up-circle"></i><span>
                                        Cuentas por cobrar
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                @* menú portal DIAN *@
                <li class="nav-item px-3">
                    <a class="nav-link text-white d-flex align-items-center justify-content-between" data-bs-toggle="collapse"
                       href="#submenuDian" role="button" aria-expanded="false" aria-controls="submenuDian">
                        <div><i class="bi bi-file-earmark-text"></i><span> Portal DIAN</span></div>
                        <i class="bi bi-chevron-down"></i>
                    </a>
                    <div class="collapse submenu-container" id="submenuDian">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item">
                                <a class="nav-link submenu-link" href="#">
                                    <i class="bi bi-building me-2"></i>Configurar Empresa
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

            </ul>
        </div>

        <div class="flex-grow-1" id="main-content">
            <main>
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="footer d-flex justify-content-between align-items-center">
        <span><i class="bi bi-person-circle"></i> @Session["nombreUsuario"] - @Session["tipoUsuario"]</span>
        <!-- <span>9:38:18 a. m. - 15/05/2025</span> -->
    </footer>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById("toggleSidebar");
            const sidebar = document.getElementById("sidebar");

            toggleBtn.addEventListener("click", function () {
                sidebar.classList.toggle("active");
            });
        });
    </script>

    <script>
        // Elimina la caché del navegador para que no regrese con el botón "Atrás"
        if (window.history && window.history.pushState) {
            window.history.pushState(null, "", window.location.href);
            window.onpopstate = function () {
                window.history.pushState(null, "", window.location.href);
            };
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/menu.js"></script>
</body>
</html>

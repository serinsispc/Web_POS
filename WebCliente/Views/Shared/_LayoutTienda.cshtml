<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>Tienda | SERINSIS PC S.A.S.</title>
    <link rel="icon" href="~/Archivos/IMG/Logo.png" type="image/png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/estilos.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-4 px-lg-5">
            <div class="d-flex justify-content-between align-items-center w-100">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index","Home")">
                    <img src="~/Archivos/IMG/Logo.png" alt="Logo SERINSIS" style="height: 50px; width: 50px; border-radius: 50%; object-fit: cover; margin-right: 10px;">
                    <span class="fw-bold fs-5" style="color: #1e237e;">SERINSIS PC</span>
                    <a href="@Url.Action("Index","Carrito")" class="position-relative ms-auto me-3">
                        <i class="bi bi-cart-fill fs-4 text-dark"></i>
                        <span id="carrito-contador" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                    </a>
                </a>
            </div>
        </div>
    </nav>

    <header class="py-4 text-center bg-light">
        <div class="container">
            <h1 class="titulo-azul mb-3">Tienda Online</h1>
            <input type="text" class="form-control w-100 w-md-50 mx-auto" placeholder="Buscar productos...">
        </div>
    </header>


    @RenderBody()

    <footer class="py-4" style="background-color: #1e237e; color: white;">
        <div class="container text-center">
            <p class="mb-0">© 2025 SERINSIS PC S.A.S. - Todos los derechos reservados</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/tienda.js"></script>

    <!-- TOAST DE CONFIRMACIÓN -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
        <div id="toastCarrito" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Producto agregado al carrito exitosamente 🎉
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    </div>
</body>
</html>
